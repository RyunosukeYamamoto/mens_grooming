<div class="container mt-3">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= @user.name %></h3>
      <h4 class="card-title">年齢：<%= @user.age %></h4>
    </div>
    <div class="card-body">
      <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 200 }) %>" alt="">
    </div>
  </div>
  
  <ul class="nav nav-tabs nav-justified mb-3">
    <li class="nav-item"><a href="#" class="nav-link <%= 'active' if current_page?(@user) %>">My Post</a></li>
    <li class="nav-item"><a href="#" class="nav-link">Favorite</a></li>
  </ul>
  
  <%= render 'posts/posts', posts: @user.posts.order(id: :desc).page(params[:page]).per(10) %>
</div>